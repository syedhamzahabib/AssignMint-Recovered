# Resolve react_native_pods.rb with node to allow for hoisting
require Pod::Executable.execute_command('node', ['-p',
  'require.resolve(
    "react-native/scripts/react_native_pods.rb",
    {paths: [process.argv[1]]},
  )', __dir__]).strip

# ✅ Updated iOS deployment target
platform :ios, '13.0'
prepare_react_native_project!

# Optional: Disable Flipper (can help avoid dependency issues)
flipper_config = FlipperConfiguration.disabled

linkage = ENV['USE_FRAMEWORKS']
if linkage != nil
  Pod::UI.puts "Configuring Pod with #{linkage}ally linked Frameworks".green
  use_frameworks! :linkage => linkage.to_sym
end

target 'AssignmintTemp' do
  config = use_native_modules!

  # Flags change depending on the env values.
  flags = get_default_flags()

  use_react_native!(
    :path => config[:reactNativePath],
    :hermes_enabled => false, # ✅ Disable Hermes
    :fabric_enabled => flags[:fabric_enabled],
    :flipper_configuration => flipper_config,
    :app_path => "#{Pod::Config.instance.installation_root}/.."
  )

  target 'AssignmintTempTests' do
    inherit! :complete
    # Pods for testing
  end

  post_install do |installer|
    react_native_post_install(
      installer,
      config[:reactNativePath],
      :mac_catalyst_enabled => false
    )

    __apply_Xcode_12_5_M1_post_install_workaround(installer)

    # ✅ Inject Boost flags + include path
    boost_targets = ['RCT-Folly', 'ReactCommon', 'React-jsiexecutor']
    boost_include_path = File.join(Pod::Config.instance.installation_root, 'third_party', 'boost')

    installer.pods_project.targets.each do |target|
      if boost_targets.include?(target.name)
        target.build_configurations.each do |config|
          config.build_settings['OTHER_CPLUSPLUSFLAGS'] ||= ['$(inherited)']
          config.build_settings['OTHER_CPLUSPLUSFLAGS'] << '-DBOOST_CONSTEXPR=constexpr'
          config.build_settings['OTHER_CPLUSPLUSFLAGS'] << '-std=c++17'

          config.build_settings['HEADER_SEARCH_PATHS'] ||= ['$(inherited)']
          config.build_settings['HEADER_SEARCH_PATHS'] << "\"#{boost_include_path}\""
        end
      end
    end
  end
end
